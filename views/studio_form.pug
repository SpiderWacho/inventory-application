extends layout

block content
  div.container
    div.form-content
      h1.title= title
      form(method='POST' action='')
        div.form-group
          label.input-label(for='name') Name:
          input#name.form-control(type='text' placeholder='Studio name' name='name' required='true' value=(undefined===studio ? '' : studio.name) )
        div.form-group
          label.input-label(for='creation_year') Year of creation:
          input#creation_year.form-control(type='number' name='creation_year' min=1930 max=2030 value=(undefined===studio ? '' : studio.creation_year) )
        div.form-group
          label.input-label(for='founder') Founders:
          input#founder.form-control(type='text' placeholder='Founders' name='founder' required='true' value=(undefined===studio ? '' : studio.founders) )
        div.form-group
          label.input-label(for='nationality') Nationality:
          input#nationality.form-control(type='text' placeholder='Nationality' name='nationality' required='true' value=(undefined===studio ? '' : studio.nationality) )
        button.btn.btn-primary(type='submit') Submit
        
        if errors
            for error in errors
              p.errors!= error.msg