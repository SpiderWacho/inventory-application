            a.hover-link(href='/catalog/game/create') Register a new Game
        div.element-container
          a(href='/catalog/consoles' class='navbar-link') Consoles
          div.subelement-container
            a.hover-link(href='/catalog/console/create') Register a new Console
        div.element-container
          a(href='/catalog/game_instances' class='navbar-link') Instances
          div.subelement-container
            a.hover-link(href='/catalog/game_instance/create') Register a new Instance
        div.element-container
          a(href='/catalog/genres' class='navbar-link') Genres
          div.subelement-container
            a.hover-link(href='/catalog/genre/create') Register a new Genre
        div.element-container
          a(href='/catalog/studios' class='navbar-link') Studios
          div.subelement-container  
            a.hover-link(href='/catalog/studio/create') Register a new Studio
    block content

