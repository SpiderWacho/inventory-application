extends layout 

block content
    h1  #{title}: #{console.name}
    if game_list.length 
        p #[strong Delete the following associated games to delete this console.]
        each game in game_list 
            dl
            dt
                p Game: 
                    a(href=game.url) #{game.title}
    else 
        p Do you really want to delete this Console?
    
        form(method='POST' action='')
            div.form-group
                input#consoleid.form-control(type='hidden', name='consoleid', required='true', value=console._id)
            button.btn.btn-primary(type='submit') Delete