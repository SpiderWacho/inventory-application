extends layout

block content

  div.form-content
    h1.title= title
    form(method='POST' action='')
      div.form-group
        label.input-label(for='name') Name:
        input#name.form-control(type='text' placeholder='Genre name' name='name' required='true' value=(undefined===genre ? '' : genre.name) )
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg