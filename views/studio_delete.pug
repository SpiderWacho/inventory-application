extends layout 

block content
    h1  #{title}: #{studio.name}
    p Founders:
    each founder in studio.founders 
        p #{founder}
    if game_list.length 
        p #[strong Delete the following associated games to delete this studio.]
        each game in game_list 
            dl
            dt
                p Game: 
                    a(href=game.url) #{game.title}
    else 
        p Do you really want to delete this Studio?
    
        form(method='POST' action='')
            div.form-group
                input#studioid.form-control(type='hidden', name='studioid', required='true', value=studio._id)
            button.btn.btn-primary(type='submit') Delete