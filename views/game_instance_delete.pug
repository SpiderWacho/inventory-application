extends layout 

block content
    h1 Game: #{game_instance.game.title}
    h2 ID: #{game_instance._id} 
    p Status: #{game_instance.status}
    p Due Back: #{game_instance.due_back}
    p Do you really want to delete this Game Instance?
    
    form(method='POST' action='')
        div.form-group
            input#game_instanceid.form-control(type='hidden', name='game_instanceid', required='true', value=game_instance._id)
        button.btn.btn-primary(type='submit') Delete